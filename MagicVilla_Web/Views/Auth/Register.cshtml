@model MagicVilla_Web.Models.DTO.RegistrationRequestDTO
<form  asp-action="Register">
    <div class="container border p-4">
        <div class="row text-center">
            <h3>Registration</h3>
        </div>
        <div class="row text-center">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>

        <div class="row">
            <div class="col-6 offset-3 pb-2">
                <input asp-for="UserName" type="text" class="form-control" placeholder="Username" />

            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Name" type="text" class="form-control" placeholder="Name" />

            </div><div class="col-6 offset-3 pb-2">
                <input asp-for="Role" type="text" class="form-control" placeholder="Role" />

            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password" />

            </div>
            <div class="col-6 offset-3 pb-2">
                <button type="submit" class="form-control btn-success" value="Submit">Register</button>

            </div>
        </div>
    </div>

</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}